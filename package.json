{
  "name": "@wasmer/wasmer-js",
  "version": "0.0.1",
  "keywords": [
    "webassembly",
    "wasm",
    "wasi"
  ],
  "author": "Syrus Akbary <syrus@wasmer.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/wasmerio/wasmer-js"
  },
  "license": "MIT",
  "scripts": {
    "postinstall": "npx run-s lerna:bootstrap",
    "build": "npx run-s lerna:build wasm-shell:build",
    "serve": "npx serve dist/ -p 8000",
    "dev": "npx run-p serve wasm-terminal:dev dev:watch",
    "dev:watch": "npx watch \"npx run-s lerna:build:dev wasm-shell:build:dev\" packages/wasi/lib packages/wasmfs/lib packages/wasm-terminal/lib examples/wasm-shell",
    "test": "npx lerna run test",
    "lint": "npx run-s lint:js lint:ts:tslint lint:ts:preetier",
    "lint:js": "npx prettier --write packages/**/rollup.*.js",
    "lint:ts:tslint": "npx tslint --project tsconfig.json -t codeFrame 'packages/**/*.ts'",
    "lint:ts:preetier": "npx prettier --write packages/**/*.ts",
    "lerna:bootstrap": "npx lerna bootstrap",
    "lerna:build": "npx lerna run build",
    "lerna:build:dev": "npx lerna run build:dev --loglevel error",
    "wasm-transformer:dev": "npx watch \"(cd crates/wasm_transformer && ./wasm_transformer_build.sh > /dev/null)\" crates/wasm_transformer/src",
    "wasm-shell:build": "npx rollup -c examples/wasm-shell/rollup.config.js --environment PROD",
    "wasm-shell:build:dev": "npx rollup -c examples/wasm-shell/rollup.config.js --environment DEV"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.10.0",
    "@babel/core": "^7.6.2",
    "@types/jest": "^24.0.16",
    "@types/shell-quote": "^1.6.1",
    "babel-jest": "^24.9.0",
    "chalk": "^2.4.2",
    "comlink": "^4.0.2",
    "deasync": "^0.1.15",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lerna": "^3.16.4",
    "local-echo": "^0.2.0",
    "memfs": "^2.15.5",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.0",
    "postcss-import": "^12.0.1",
    "preact": "^8.4.2",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-hash": "^1.3.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "rollup-plugin-url": "^2.2.2",
    "serve": "^11.2.0",
    "shell-parse": "0.0.2",
    "shell-quote": "^1.7.1",
    "sinon": "^7.4.1",
    "spyfs": "^1.0.2",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "url": "^0.11.0",
    "watch": "^1.0.2",
    "xterm": "^3.14.5"
  }
}
